    // é‡æ–°æ·»åŠ åŠ¨ç”»æ•ˆæœ
    reanimateVisiblePosts();
  }
  
  // é‡æ–°åŠ¨ç”»æ˜¾ç¤ºçš„æ–‡ç« 
  function reanimateVisiblePosts() {
    let delay = 0.1;
    blogPosts.forEach(post => {
      if (!post.classList.contains('hidden')) {
        post.style.animation = 'none';
        post.offsetHeight; // è§¦å‘é‡æ’
        post.style.animation = `postFadeIn 0.6s ease-out ${delay}s forwards`;
        delay += 0.1;
      }
    });
  }
