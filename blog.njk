document.addEventListener('DOMContentLoaded', function() {
  const moodButtons = document.querySelectorAll('#moodFilters .filter-btn');
  const tagButtons = document.querySelectorAll('#tagFilters .filter-btn');
  const blogPosts = document.querySelectorAll('.blog-post');
  const noResults = document.getElementById('noResults');
  
  let currentMood = 'all';
  let currentTag = 'all';
  
  // å¿ƒæƒ…è¿‡æ»¤
  moodButtons.forEach(button => {
    button.addEventListener('click', function() {
      moodButtons.forEach(btn => btn.classList.remove('active'));
      this.classList.add('active');
      currentMood = this.dataset.mood;
      filterPosts();
    });
  });
  
  // æ ‡ç­¾è¿‡æ»¤
  tagButtons.forEach(button => {
    button.addEventListener('click', function() {
      tagButtons.forEach(btn => btn.classList.remove('active'));
      this.classList.add('active');
      currentTag = this.dataset.tag;
      filterPosts();
    });
  });
  
  // è¿‡æ»¤æ–‡ç« 
  function filterPosts() {
    let visibleCount = 0;
    
    blogPosts.forEach(post => {
      const postMood = post.dataset.mood;
      const postTags = post.dataset.tags || '';
      
      const moodMatch = currentMood === 'all' || postMood === currentMood;
      const tagMatch = currentTag === 'all' || postTags.includes(currentTag);
      
      if (moodMatch && tagMatch) {
        post.classList.remove('hidden');
        post.style.display = 'block';
        visibleCount++;
      } else {
        post.classList.add('hidden');
        post.style.display = 'none';
      }
    });
    
    // æ˜¾ç¤ºæˆ–éšè—"æ— ç»“æœ"æç¤º
    if (visibleCount === 0) {
      noResults.style.display = 'block';
    } else {
      noResults.style.display = 'none';
