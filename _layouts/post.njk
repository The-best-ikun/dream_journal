<style>
.blog-detail {
  padding: 2rem 0;
}

.article-content {
  padding: 3rem;
  margin-bottom: 2rem;
}

.article-header {
  margin-bottom: 2rem;
  padding-bottom: 2rem;
  border-bottom: 1px solid var(--border-color);
}

.article-mood {
  font-size: 3rem;
  text-align: center;
  margin-bottom: 1.5rem;
}

.article-title {
  font-size: 2.5rem;
  margin-bottom: 1.5rem;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  line-height: 1.2;
  text-align: center;
}

.article-meta {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 2rem;
  align-items: center;
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.article-tags {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.tag {
  background: var(--gradient-secondary);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: 500;
}

.article-body {
  font-size: 1.1rem;
  line-height: 1.8;
  color: var(--text-primary);
  margin: 2rem 0;
}

.article-body h2,
.article-body h3,
.article-body h4 {
  margin-top: 2.5rem;
  margin-bottom: 1rem;
  color: var(--text-primary);
}

.article-body h2 {
  font-size: 1.8rem;
  border-left: 4px solid var(--accent-light);
  padding-left: 1rem;
}

.article-body h3 {
  font-size: 1.5rem;
}

.article-body p {
  margin-bottom: 1.5rem;
  text-align: justify;
}

.article-body ul,
.article-body ol {
  margin-bottom: 1.5rem;
  padding-left: 2rem;
}

.article-body li {
  margin-bottom: 0.5rem;
}

.article-body blockquote {
  border-left: 4px solid var(--accent-pink);
  padding-left: 1.5rem;
  margin: 2rem 0;
  color: var(--text-secondary);
  font-style: italic;
  background: var(--bg-secondary);
  padding: 1.5rem;
  border-radius: 0 8px 8px 0;
}

.article-body code {
  background: var(--bg-secondary);
  padding: 0.2rem 0.4rem;
  border-radius: 4px;
  font-family: 'Courier New', monospace;
  font-size: 0.9rem;
  color: var(--accent-light-dark);
}

.article-body pre {
  background: var(--bg-secondary);
  padding: 1.5rem;
  border-radius: 8px;
  overflow-x: auto;
  margin: 1.5rem 0;
}

.article-body pre code {
  background: transparent;
  padding: 0;
  color: var(--text-primary);
}

.article-body table {
  width: 100%;
  border-collapse: collapse;
  margin: 1.5rem 0;
}

.article-body th,
.article-body td {
  padding: 0.75rem;
  text-align: left;
  border-bottom: 1px solid var(--border-color);
}

.article-body th {
  background: var(--bg-secondary);
  font-weight: 600;
}

.creation-background {
  margin: 3rem 0;
  padding: 2rem;
  border-radius: 12px;
}

.creation-background h2 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: var(--text-primary);
  text-align: center;
}

.background-content {
  color: var(--text-secondary);
  line-height: 1.7;
  font-style: italic;
}

.article-navigation {
  margin-top: 3rem;
  padding: 2rem;
  border-radius: 12px;
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  gap: 2rem;
  align-items: center;
}

.nav-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  color: var(--text-secondary);
  text-decoration: none;
  padding: 1rem;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.nav-link:hover {
  background: var(--bg-secondary);
  color: var(--accent-light);
  transform: translateY(-2px);
}

.nav-text {
  display: flex;
  flex-direction: column;
}

.nav-label {
  font-size: 0.85rem;
  color: var(--text-muted);
  margin-bottom: 0.25rem;
}

.nav-title {
  font-weight: 500;
  line-height: 1.3;
}

.nav-home {
  text-align: center;
}

.nav-home .nav-link {
  flex-direction: column;
  gap: 0.5rem;
}

.nav-prev .nav-link {
  justify-content: flex-start;
}

.nav-next .nav-link {
  justify-content: flex-end;
}

.nav-next .nav-text {
  text-align: right;
}

@media (max-width: 768px) {
  .article-content {
    padding: 2rem 1.5rem;
  }
  
  .article-title {
    font-size: 2rem;
  }
  
  .article-meta {
    flex-direction: column;
    gap: 1rem;
  }
  
  .article-navigation {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .nav-home {
    order: -1;
  }
  
  .nav-prev .nav-link,
  .nav-next .nav-link {
    justify-content: center;
  }
  
  .nav-next .nav-text {
    text-align: center;
  }
}

/* ÊñáÁ´†ÂÜÖÂÆπÂä®Áîª */
.article-body {
  opacity: 0;
  animation: articleFadeIn 0.8s ease-out 0.3s forwards;
}

@keyframes articleFadeIn {
  to {
    opacity: 1;
  }
}
</style>