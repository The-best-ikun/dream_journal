<style>
.photo-detail {
  padding: 2rem 0;
}

.photo-content {
  display: grid;
  grid-template-columns: 1.5fr 1fr;
  gap: 3rem;
  padding: 3rem;
  margin-bottom: 2rem;
}

.photo-display {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  background: var(--bg-secondary);
  aspect-ratio: 4/3;
}

.photo-display img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
  cursor: zoom-in;
}

.photo-display img:hover {
  transform: scale(1.05);
}

.photo-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.photo-title {
  font-size: 2.5rem;
  margin-bottom: 1.5rem;
  background: var(--gradient-secondary);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  line-height: 1.2;
}

.photo-meta {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-bottom: 2rem;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.photo-description {
  margin-bottom: 2rem;
}

.photo-description h3 {
  font-size: 1.3rem;
  margin-bottom: 1rem;
  color: var(--text-primary);
}

.description-text {
  color: var(--text-secondary);
  line-height: 1.7;
  font-size: 1.05rem;
}

.photo-tags {
  margin-bottom: 2rem;
}

.photo-tags h3 {
  font-size: 1.3rem;
  margin-bottom: 1rem;
  color: var(--text-primary);
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  background: var(--gradient-secondary);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: 500;
  transition: transform 0.2s ease;
}

.tag:hover {
  transform: scale(1.1);
}

.photo-navigation {
  padding: 2rem;
  border-radius: 12px;
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  gap: 2rem;
  align-items: center;
}

.nav-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  color: var(--text-secondary);
  text-decoration: none;
  padding: 1rem;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.nav-link:hover {
  background: var(--bg-secondary);
  color: var(--accent-light);
  transform: translateY(-2px);
}

.nav-text {
  display: flex;
  flex-direction: column;
}

.nav-label {
  font-size: 0.85rem;
  color: var(--text-muted);
  margin-bottom: 0.25rem;
}

.nav-title {
  font-weight: 500;
  line-height: 1.3;
}

.nav-home {
  text-align: center;
}

.nav-home .nav-link {
  flex-direction: column;
  gap: 0.5rem;
}

.nav-prev .nav-link {
  justify-content: flex-start;
}

.nav-next .nav-link {
  justify-content: flex-end;
}

.nav-next .nav-text {
  text-align: right;
}

/* å›¾ç‰‡å…¨å±æŸ¥çœ‹åŠŸèƒ½ */
.fullscreen-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.95);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  cursor: pointer;
}

.fullscreen-overlay.active {
  display: flex;
}

.fullscreen-overlay img {
  max-width: 95%;
  max-height: 95%;
  object-fit: contain;
  animation: zoomIn 0.3s ease-out;
}

@keyframes zoomIn {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.fullscreen-close {
  position: absolute;
  top: 2rem;
  right: 2rem;
  color: white;
  font-size: 2rem;
  cursor: pointer;
  background: rgba(0, 0, 0, 0.5);
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.3s ease;
}

.fullscreen-close:hover {
  background: rgba(0, 0, 0, 0.8);
}

/* å“åº”å¼è®¾è®¡ */
@media (max-width: 968px) {
  .photo-content {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .photo-display {
    order: -1;
  }
  
  .photo-title {
    font-size: 2rem;
  }
  
  .photo-meta {
    flex-direction: row;
    flex-wrap: wrap;
  }
}

@media (max-width: 768px) {
  .photo-content {
    padding: 2rem 1.5rem;
  }
  
  .photo-title {
    font-size: 1.8rem;
  }
  
  .photo-navigation {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .nav-home {
    order: -1;
  }
  
  .nav-prev .nav-link,
  .nav-next .nav-link {
    justify-content: center;
  }
  
  .nav-next .nav-text {
    text-align: center;
  }
  
  .photo-meta {
    flex-direction: column;
  }
}

/* åŠ¨ç”»æ•ˆæœ */
.photo-content {
  opacity: 0;
  animation: photoFadeIn 0.8s ease-out 0.2s forwards;
}

@keyframes photoFadeIn {
  to {
    opacity: 1;
  }
}

.photo-navigation {
  opacity: 0;
  animation: photoFadeIn 0.8s ease-out 0.4s forwards;
}
</style>

