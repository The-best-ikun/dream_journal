    { name: 'Python', level: 65, color: '#3776ab', x: -100, y: 150 },
    { name: 'Docker', level: 60, color: '#2496ed', x: 0, y: -180 }
  ];
  
  // ç»˜åˆ¶è½¨é“
  function drawOrbit(radius) {
    ctx.beginPath();
    ctx.arc(centerX, centerY, radius, 0, Math.PI * 2);
    ctx.strokeStyle = 'rgba(168, 218, 220, 0.2)';
    ctx.lineWidth = 1;
    ctx.stroke();
  }
  
  // ç»˜åˆ¶æŠ€èƒ½æ˜Ÿçƒ
  function drawSkill(skill) {
    const x = centerX + skill.x;
    const y = centerY + skill.y;
    const radius = (skill.level / 100) * 30 + 10;
    
    // ç»˜åˆ¶è¿çº¿
    ctx.beginPath();
    ctx.moveTo(centerX, centerY);
    ctx.lineTo(x, y);
    ctx.strokeStyle = 'rgba(168, 218, 220, 0.3)';
    ctx.lineWidth = 1;
    ctx.stroke();
    
    // ç»˜åˆ¶æ˜Ÿçƒ
    const gradient = ctx.createRadialGradient(x, y, 0, x, y, radius);
    gradient.addColorStop(0, skill.color);
    gradient.addColorStop(0.7, skill.color);
    gradient.addColorStop(1, skill.color + '40');
    
    ctx.beginPath();
    ctx.arc(x, y, radius, 0, Math.PI * 2);
    ctx.fillStyle = gradient;
    ctx.fill();
    
    // ç»˜åˆ¶è¾¹æ¡†
    ctx.beginPath();
    ctx.arc(x, y, radius, 0, Math.PI * 2);
    ctx.strokeStyle = skill.color;
    ctx.lineWidth = 2;
    ctx.stroke();
    
    // ç»˜åˆ¶æ–‡å­—
    ctx.fillStyle = getComputedStyle(document.documentElement).getPropertyValue('--text-primary');
    ctx.font = '12px Noto Sans SC';
    ctx.textAlign = 'center';
    ctx.fillText(skill.name, x, y - radius - 10);
    
    // ç»˜åˆ¶ç†Ÿç»ƒåº¦
    ctx.font = '10px Noto Sans SC';
    ctx.fillStyle = getComputedStyle(document.documentElement).getPropertyValue('--text-secondary');
    ctx.fillText(skill.level + '%', x, y + 3);
  }
  
  // ç»˜åˆ¶ä¸­å¿ƒå¤ªé˜³
  function drawSun() {
    const gradient = ctx.createRadialGradient(centerX, centerY, 0, centerX, centerY, 25);
    gradient.addColorStop(0, '#FFD700');
    gradient.addColorStop(0.7, '#FFA500');
    gradient.addColorStop(1, '#FF6347');
    
    ctx.beginPath();
    ctx.arc(centerX, centerY, 25, 0, Math.PI * 2);
    ctx.fillStyle = gradient;
    ctx.fill();
    
    // å¤ªé˜³å…‰æ™•
    ctx.beginPath();
    ctx.arc(centerX, centerY, 30, 0, Math.PI * 2);
